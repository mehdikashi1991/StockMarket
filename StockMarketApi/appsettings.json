{
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Targets.Seq" }
    ],
    "internalLogLevel": "Warn",
    "internalLogFile": "${basedir}/Log/InternalLog/internal-nlog.log",
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/Log/FileLog/log-${shortdate}.log",
        "layout": "|${uppercase:${level}}|${longdate}|${callsite}|${message}|"
      },
      "seq": {
        "type": "Seq",
        "serverUrl": "http://localhost:5341",
        "apiKey": "",
        "properties": [
          {
            "name": "Source",
            "value": "${Logger}"
          },
          {
            "name": "ThreadId",
            "value": "${ThreadId}",
            "as": "number"
          },
          {
            "name": "MachineName",
            "value": "${MachineName}"
          },
          {
            "name": "HostKey",
            "value": "StockMarketApi"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "seq"
      }
    ]
  }
}